<div class="container-fluid">
  {{#if model.error}}
    <div class="panel panel-warning">
      <div class="panel-heading">
          Error occured:
      </div>
      <div class="panel-body">
        {{{model.error}}}
      </div>
    </div>
  {{/if}}
  <div class="row">
    <div class="col-md-5" style="height:100%">
      <div class="panel panel-default">
        <div class="panel-heading">
          Task
        </div>
        <div class="panel-body">
          {{model.task.text}}
        </div>
      </div>
      {{schema-accordion model.task}}
    </div>
    <div class="col-md-7">
      {{trainer-ace-editor editorContent=userStatement onExportData=(action "submitStatement")}}

      <h3> ResultSet: <small>{{#if model.resultSet}}last executed{{else}}none yet{{/if}}</small></h3>

      {{#if model.resultSet}}
      <table class="table table-condensed table-bordered">
        <thead>
          <tr>
            {{#each model.resultSet.header as |headEntry|}}
              <th>{{headEntry}}</th>
            {{/each}}
          </tr>
        </thead>
        <tbody>
          {{#each model.resultSet.datasets as |dataset|}}
            <tr>
              {{#each dataset as |setEntry|}}
                <td>
                  {{setEntry}}
                </td>
              {{/each}}
            </tr>
          {{/each}}
        </tbody>
      </table>
      {{/if}}

    </div>
    <div class="clearfix"></div>
  </div>
</div>
{{outlet}}
